{
  "compilerOptions": {
    "experimentalDecorators": true,
    "module": "commonjs",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "es2017",
    "moduleResolution": "node",
    "resolveJsonModule": true
  },
  "compileOnSave": true,
  "include": [
    "src",
    "__test__/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "lib",
    "dist"
  ]
}
